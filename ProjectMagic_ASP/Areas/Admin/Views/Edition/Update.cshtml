@model ProjectMagic_ASP.Models.Forms.EditionForm

@{
    ViewData["Title"] = "Update";
    Layout = "../Shared/_AdminLayout.cshtml";
}

<h4>Modification de l'édition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NbMax" class="control-label"></label>
                <input asp-for="NbMax" class="form-control" />
                <span asp-validation-for="NbMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

