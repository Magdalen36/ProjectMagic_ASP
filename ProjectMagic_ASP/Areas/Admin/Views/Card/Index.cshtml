@model IEnumerable<ProjectMagic_ASP.Models.CardModel>

@{
    ViewData["Title"] = "Index";
    Layout = "../Shared/_AdminLayout.cshtml";
}

<h1>Liste des cartes</h1>

<p class="create">
    <a asp-action="Create"><i class="create-icon fas fa-plus-square"></i>Nouvelle carte</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Nom
            </th>
            <th>
                Coût
            </th>
            <th>
                Rareté
            </th>
            <th>
                Type de carte
            </th>
            <th>
                Couleur
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.RarityName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TypeCardName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ColorName)
            </td>

            @*<td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>*@

            <td class="listIcons">
                <a asp-controller="Card"
                   asp-action="Update"
                   asp-route-id="@item.Id"><i class="update-icon fas fa-edit"></i></a>

                <span> - </span>

                <a asp-controller="Card"
                   asp-action="Delete"
                   asp-route-id="@item.Id"
                   class="delete-link"><i class="delete-icon fas fa-trash-alt"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
