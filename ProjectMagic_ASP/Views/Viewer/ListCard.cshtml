@model ProjectMagic_ASP.Models.CardFullModel

@{
    ViewData["Title"] = "ListCard";
    //Layout = "../Shared/_AdminLayout.cshtml";
}

<h3>Liste des cartes</h3>

<form asp-controller="Viewer" asp-action="ListCard">

    <div class="border border-top p-2">
        <div class="form-group">
            <label class="control-label">Nom</label>
            <input type="text" class="form-control" name="name" />
        </div>

        <div class="form-group">
            <label class="control-label"></label>
            @Html.DropDownList("color", new SelectList(Model.ListColors.Select(l => l.Name)), "Couleur", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label class="control-label"></label>
            @Html.DropDownList("type", new SelectList(Model.ListTypes.Select(l => l.Name)), "Types", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label class="control-label"></label>
            @Html.DropDownList("rarity", new SelectList(Model.ListRaretes.Select(l => l.Name)), "Rareté", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="submit" value="Recherche" />
        </div>
    </div>
</form>

<br />

<p class="border border-top p-2 text-center ">
    <a class="nav-link text-dark" asp-area="" asp-controller="Viewer" asp-action="ListCard"><i class="create-icon fas fa-plus-square"></i> Nouveau tirage de 30 cartes aléatoires</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th> </th>
