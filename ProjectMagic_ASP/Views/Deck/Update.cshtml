@model ProjectMagic_ASP.Models.Forms.DeckForm

@{
    ViewData["Title"] = "Update";
}

<h3>Mise à jour du nom du deck</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DeckName" class="control-label">Nom :</label>
                <input asp-for="DeckName" class="form-control" />
                <span asp-validation-for="DeckName" class="text-danger"></span>
            </div>
            <div>
                Il n'est pas possible de changer la couleur !
            </div> <br />

            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour aux decks</a>
</div>

